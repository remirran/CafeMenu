<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style parent="@android:style/Theme.NoTitleBar.Fullscreen" name="DigitalMenu"></style>
    <style parent="@DigitalMenu.Main.DefaultButton" name="DigitalMenu.Main.TitleButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:onClick">titleButtonOnClick</item>
        <item name="android:background">@drawable/button_title</item>
        <item name="android:text">@string/sample_section</item>
    </style>
    <style parent="@DigitalMenu.Main.TitleButton" name="DigitalMenu.Main.TitleButton.Active">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_title_pressed</item>
    </style>
    <style parent="@android:style/Widget.Holo.TextView" name="DigitalMenu.Main.SectionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:background">@drawable/button_title</item>
    </style>
    <style name="DigitalMenu.Main.OrderButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="DigitalMenu.Init.DigitButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">buttonOnClick</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="DigitalMenu.Title.AdvImageView" parent="@android:style/Widget.Holo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style parent="@android:style/Widget.Holo.Button" name="DigitalMenu.Main.DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:inputType">textImeMultiLine|textNoSuggestions</item>
        <item name="android:background">@drawable/button_title_normal</item>
    </style>
    <style parent="@DigitalMenu.Main.DefaultButton" name="DigitalMenu.Main.ButtonAdd">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
		<item name="android:minHeight">40dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/button_add</item>
    </style>
</resources>